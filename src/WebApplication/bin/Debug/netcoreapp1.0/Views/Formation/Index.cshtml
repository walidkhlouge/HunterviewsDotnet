@model IEnumerable<WebApplication.Models.Formation>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a asp-action="Insert">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Recherche par ecole: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </p>
    </div>
</form>
<table class="table">
    <table class="table">
        <thead>
            <tr>
                
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm">@Html.DisplayNameFor(model => model.ecole)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParm">@Html.DisplayNameFor(model => model.dateStart)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dateEnd)
                </th>
               


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ecole)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dateEnd)
                    </td>
                    
                    
                    

                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Participants", "Participants", new { id = item.userid }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
